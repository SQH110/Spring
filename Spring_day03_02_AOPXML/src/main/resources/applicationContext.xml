<!--获取异常数据-->
    <aop:config>
        <aop:pointcut id="pt" expression="execution(* *..*(..))"/>
        <aop:aspect ref="myAdvice">
            <!--只有这两个可以拿到返回值数据-->
            <aop:around method="around" pointcut-ref ="pt"/>
            <aop:after-throwing method="afterThrowing" pointcut-ref ="pt" throwing="t"/><!--这个ret就是获取的值，做的配置-->
        </aop:aspect>
    </aop:config>



